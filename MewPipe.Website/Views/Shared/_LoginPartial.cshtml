@using System.Configuration
@using MewPipe.Website.Security
@if (Request.GetIdentity().IsAuthenticated())
{

    using (Html.BeginForm("LogOff", "Auth", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Upload Video", "UploadVideo", "Videos")</li>
            <li><a href="@ConfigurationManager.AppSettings["AccountEndpoint"]">@Request.GetIdentity().User.Email</a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in or Register", "Login", "Auth", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>   
}
