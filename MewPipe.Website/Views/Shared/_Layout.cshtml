@using MewPipe.Logic.Migrations
@model MewPipe.Website.ViewModels.SearchViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MewPipe</title>
        @Styles.Render("~/styles")
        @RenderSection("styles", required: false)

</head>
<body class="@ViewBag.BodyClass">
    <div class="fullHeight">
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.RouteUrl("HomePage")" class="navbar-brand">
                        <span class="black">Mew</span><span class="red">Pipe</span>
                    </a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    @if (ViewBag.HideSearchBar == null || !ViewBag.HideSearchBar)
                    {
                        using (Html.BeginForm("Search", "Videos", FormMethod.Get, new { @class = "navbar-form navbar-left search", @role = "search" }))
                        {
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.Term, new { @class = "form-control", @placeholder = "Search" })
                                <span class="input-group-btn">
                                    <button class="btn btn-info appendedBtn" type="submit">SEARCH</button>
                                </span>
                            </div>
                        }
                    }
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        @Html.Partial("_FlashMessage")
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>

    @Html.Partial("_Footer")

    @Scripts.Render("~/scripts")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(function () {
            FlashMessages.attach($("#flash-messages"));
        });
    </script>
</body>
</html>
