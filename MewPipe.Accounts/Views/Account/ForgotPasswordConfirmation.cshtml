@{
    ViewBag.Title = "Forgot Password Confirmation";
    ViewBag.BodyClass = "accounting";
}


<div class="row">
    <div class="centerForm singleCol col-md-6 col-md-offset-3">
        <div class="formHeader">
            <h3 class="text-center">Password Reset email successfully sent !</h3>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12 col account">

                    <p class="text-center">
                        Please check your email to reset your password.
                    </p>
                    <p class="text-center">
                        @Html.ActionLink("Return to the home page", "Index", "Home", null, new { @class = "btn btn-success raised" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
