@{
    ViewBag.Title = "Reset password confirmation";
    ViewBag.BodyClass = "accounting";
}


<div class="row">
    <div class="centerForm singleCol col-md-6 col-md-offset-3">
        <div class="formHeader">
            <h3 class="text-center">Password Reseted successfully !</h3>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12 col account">

                    <p class="text-center">
                        Your password has been reseted !
                    </p>
                    <p class="text-center">
                        @Html.ActionLink("Go to the login page", "Login", "Account", null, new { @class = "btn btn-success raised" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>