@model MewPipe.Accounts.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    ViewBag.BodyClass = "accounting";
}


<div class="row">
    <div class="centerForm singleCol col-md-6 col-md-offset-3">
        <div class="formHeader">
            <h3 class="text-center">Reset your password</h3>
            <p>
                Please type the username of your account, we will send you a mail with some instructions to reset your password.
            </p>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12 col account">
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        <div class="form-body">
                            @Html.HiddenFor(model => model.Code)
                            <p>
                                @Html.LabelFor(m => m.Username, new { @class = "" })
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </p>
                            <p>
                                @Html.LabelFor(m => m.Password, new { @class = "" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </p>
                            <p>
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <button class="btn btn-primary raised btn-block " type="submit">Reset my password</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>